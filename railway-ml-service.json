{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.railway",
    "buildCommand": "docker build -f Dockerfile.railway -t railway-ml-training ."
  },
  "deploy": {
    "startCommand": "python railway_ml_train.py",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "sleepApplication": false,
    "watchPatterns": [
      {
        "path": "src/",
        "include": ["**/*.py"]
      },
      {
        "path": "railway_ml_train.py",
        "include": ["*.py"]
      }
    ]
  },
  "environments": [
    {
      "name": "production",
      "envVars": [
        {
          "name": "PYTHONUNBUFFERED",
          "value": "1"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        },
        {
          "name": "TRAINING_ENV",
          "value": "railway"
        },
        {
          "name": "PORT",
          "value": "8000"
        }
      ]
    }
  ]
}
